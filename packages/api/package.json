    "@types/winston": "^2.3.7",
    "concurrently": "^3.5.1",
    "cross-env": "^5.1.1",
    "nodemon": "^1.12.1",
    "prettier": "^1.9.0",
    "rimraf": "^2.6.2",
    "tslib": "^1.8.0",
