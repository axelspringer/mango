{
  "name": "@axelspringer/mango-api",
  "version": "0.6.1",
  "description": "An API Gateway for WordPress",
  "main": "dist/main.js",
  "typings": "types/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json --outDir ./dist",
    "build:docker": "docker build --squash -t axelspringer/mango-api .",
    "clean": "npm run rimraf -- dist node_modules",
    "clean:dist": "npm run rimraf -- dist",
    "prebuild": "npm run clean:dist",
    "rimraf": "rimraf",
    "server:dev": "cross-env NODE_ENV=development ./node_modules/.bin/nodemon --watch src --watch dist --watch $(realpath node_modules/@axelspringer/mango-plugin-pagemanager) ./dist/server.js",
    "start": "cross-env NODE_ENV=development npm run build && concurrently \"npm run watch\" \"npm run server:dev\"",
    "watch": "tsc --watch -p tsconfig.json --outDir ./dist"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "bin",
    "data",
    "dist",
    "types",
    "scripts"
  ],
  "bin": {
    "mango-api": "./bin/mango-api"
  },
  "engines": {
    "node": ">=6.9.13",
    "npm": ">=3.10.7"
  },
  "author": "Axel Springer SE",
  "contributors": [
    {
      "name": "Sebastian DÃ¶ll",
      "email": "sebastian.doell@axelspringer.com"
    }
  ],
  "peerDependencies": {
    "graphql": "^0.12.3",
    "graphql-iso-date": "^3.3.0"
  },
  "license": "MIT",
  "devDependencies": {
    "@axelspringer/mango-plugin-navigation": "^0.6.1",
    "@axelspringer/mango-plugin-pagemanager": "^0.6.1",
    "@types/koa": "^2.0.43",
    "@types/node": "^8.5.2",
    "@types/winston": "^2.3.7",
    "concurrently": "^3.5.1",
    "cross-env": "^5.1.3",
    "nodemon": "^1.14.7",
    "prettier": "^1.9.2",
    "rimraf": "^2.6.2",
    "tslint": "^5.8.0",
    "tslint-config-prettier": "^1.6.0",
    "typescript": "^2.6.2"
  },
  "dependencies": {
    "@koa/cors": "^2.2.1",
    "apollo-server-koa": "^1.3.2",
    "axios": "^0.17.1",
    "dataloader": "^1.3.0",
    "dnscache": "^1.0.1",
    "http-graceful-shutdown": "^2.1.1",
    "http-status-codes": "^1.3.0",
    "koa": "^2.4.1",
    "koa-bodyparser": "^4.2.0",
    "koa-pino-logger": "^2.1.1",
    "koa-router": "^7.3.0",
    "regenerator-runtime": "^0.11.1",
    "rimraf": "^2.6.2",
    "ts-node": "^4.1.0",
    "tslib": "^1.8.0",
    "typescript": "^2.7.2",
    "winston": "^3.0.0-rc1",
    "yargs": "^10.0.3"
  }
}
