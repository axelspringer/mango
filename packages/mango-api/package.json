{
  "name": "@axelspringer/mango-api",
  "version": "1.1.0-2",
  "description": "An API Gateway for WordPress",
  "main": "dist/main.js",
  "typings": "types/main.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json --outDir ./dist",
    "build:docker": "docker build --squash -t axelspringer/mango-api .",
    "clean": "npm run rimraf -- dist node_modules",
    "clean:dist": "npm run rimraf -- dist",
    "prebuild": "npm run clean:dist",
    "rimraf": "rimraf",
    "server": "cross-env NODE_ENV=production node ./dist/server.js",
    "server:dev": "cross-env NODE_ENV=development ./node_modules/.bin/nodemon --watch dist ./dist/server.js",
    "start": "cross-env NODE_ENV=development npm run build && concurrently \"npm run watch\" \"npm run server:dev\"",
    "watch": "tsc --watch -p tsconfig.json --outDir ./dist"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "bin",
    "data",
    "dist",
    "types",
    "scripts"
  ],
  "bin": {
    "mango-api": "./bin/mango-api"
  },
  "engines": {
    "node": ">=6.9.13",
    "npm": ">=3.10.7"
  },
  "author": "Axel Springer SE",
  "contributors": [
    {
      "name": "Sebastian DÃ¶ll",
      "email": "sebastian.doell@axelspringer.com"
    }
  ],
  "peerDependencies": {
    "graphql": "^0.12.3",
    "graphql-iso-date": "^3.3.0"
  },
  "license": "MIT",
  "devDependencies": {
    "@axelspringer/mango-plugin-navigation": "^1.0.0-beta.116",
    "@axelspringer/mango-plugin-pagemanager": "^1.1.0-2",
    "@types/koa": "^2.0.46",
    "@types/node": "^10.5.2",
    "@types/winston": "^2.3.9",
    "concurrently": "^3.6.1",
    "cross-env": "^5.2.0",
    "nodemon": "^1.18.3",
    "prettier": "^1.14.2",
    "rimraf": "^2.6.2",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.13.0",
    "typescript": "^2.9.2"
  },
  "dependencies": {
    "@koa/cors": "^2.2.1",
    "apollo-server-koa": "^2.0.0",
    "axios": "^0.18.0",
    "axios-debug-log": "^0.4.0",
    "axios-retry": "^3.1.1",
    "babel-polyfill": "^6.26.0",
    "chalk": "^2.4.1",
    "dataloader": "^1.4.0",
    "dnscache": "^1.0.1",
    "encoding-down": "^5.0.4",
    "http-graceful-shutdown": "^2.1.1",
    "http-status-codes": "^1.3.0",
    "js-sha256": "^0.9.0",
    "koa": "^2.5.2",
    "koa-bodyparser": "^4.2.1",
    "koa-pino-logger": "^2.1.1",
    "koa-router": "^7.3.0",
    "lru-cache": "^4.1.3",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "regenerator-runtime": "^0.12.0",
    "rimraf": "^2.6.2",
    "ts-node": "^7.0.0",
    "tslib": "^1.9.2",
    "url-parse": "^1.4.3",
    "winston": "^3.0.0",
    "yargs": "^12.0.1"
  }
}
